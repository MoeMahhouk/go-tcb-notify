# Server
PORT=8080
LOG_LEVEL=info
METRICS_ENABLED=true

# DB (note localhost here)
DATABASE_URL=postgres://user:password@localhost:5432/go_tcb_notify?sslmode=disable

# Ethereum / Registry
ETHEREUM_RPC_URL=http://localhost:8545
REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
REGISTRY_ABI_PATH=./abi/FlashtestationRegistry.json
REGISTRY_EVENT_NAME=TEEServiceRegistered

# Intel PCS
PCS_BASE_URL=https://api.trustedservices.intel.com

# Intervals
TCB_FETCH_INTERVAL=1h
QUOTE_CHECK_INTERVAL=5m

# Alerts
WEBHOOK_URL=https://webhook.site/your-unique-url
ALERT_COOLDOWN=1h
WEBHOOK_TIMEOUT=30s

# Metrics
METRICS_ENABLED=true
START_BLOCK=0
BATCH_SIZE=1000
