# ===================
# Logging
# ===================
LOG_LEVEL=info
DEBUG=false

# ===================
# Ethereum
# ===================
ETHEREUM_RPC_URL=http://your-rpc-endpoint:8545
REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
START_BLOCK=0

# ===================
# ClickHouse (Native Protocol)
# ===================
CH_ADDRS=clickhouse:9000
CH_DATABASE=default
CH_USERNAME=default
CH_PASSWORD=
CH_DIAL_TIMEOUT=5s
CH_COMPRESSION=lz4
CH_SECURE=false
CH_SKIP_VERIFY=false

# ===================
# Ingest Registry Service
# ===================
# How often to check for new blockchain events
INGEST_POLL_INTERVAL=15s
# How many blocks to process at once
INGEST_BATCH_BLOCKS=128

# ===================
# Evaluate Quotes Service
# ===================
# How often to evaluate ALL registered quotes
EVAL_POLL_INTERVAL=60s
# Whether to fetch collateral from Intel PCS (recommended: true for production)
EVAL_GET_COLLATERAL=true
# Whether to check certificate revocations (recommended: true for production)
EVAL_CHECK_REVOCATIONS=true

# ===================
# Intel PCS Service
# ===================
# Intel PCS API base URL
PCS_BASE_URL=https://api.trustedservices.intel.com
# Optional API key for Intel PCS (usually not needed for public endpoints)
PCS_API_KEY=
# How often to refresh TCB info from Intel
PCS_POLL_INTERVAL=1h
