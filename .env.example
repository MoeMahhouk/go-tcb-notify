# Server Configuration
PORT=8080
LOG_LEVEL=info
METRICS_ENABLED=true

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/tcb_notify?sslmode=disable

# Intel PCS Configuration
PCS_BASE_URL=https://api.trustedservices.intel.com

# Ethereum Configuration (optional - for direct blockchain monitoring)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
START_BLOCK=0
BATCH_SIZE=1000

# Webhook Configuration
WEBHOOK_URL=https://your-registry.com/api/tcb-alerts
WEBHOOK_TIMEOUT=30s

# Service Intervals
TCB_FETCH_INTERVAL=1h
QUOTE_CHECK_INTERVAL=30m
ALERT_COOLDOWN=1h
